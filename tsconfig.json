{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": false,
    "incremental": true,
    "paths": {
      "@common/*": ["access-control/common/*"],
      "@building/*": ["access-control/building/*"],
      "@root/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}