    "version": "0.2.0",
    "configurations": [

    
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable":"node --inspect",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/src/main.ts",
            "protocol": "auto",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "restart": true,
            "protocol": "inspector",
            "address": "127.0.0.1",
            "port": 3000,
            "localRoot": "${workspaceRoot}/",
            "remoteRoot": "/usr/src/app/"
        }
    ]
}